@import: base
@require: option

module Option2 : sig
  val is-none : 'a option -> bool
  val is-some : 'a option -> bool
  val join : ('a option) option -> 'a option
end = struct
  let-rec is-none
    | (None) = true
    | (Some(_)) = false

  let-rec is-some
    | (None) = false
    | (Some(_)) = true
  
  let join m = Option.bind m id
end